{
  "title": "Nordic (Finnish) Mac to Windows style keyboard for programmers (curly braces, backslash, pipe(OR) symbol)",
  "rules": [
    {
      "description": "Right Opt + 7,0 ---> curly braces { }",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ]
            }
          },
          "to": [
            {
              "key_code": "8",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "0",
            "modifiers": {
              "mandatory": [
                "right_alt"
              ]
            }
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Right Opt + key_left_of_backspace(<) ---> backslash \\",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Right Opt + key_left_of_z ---> pipe/OR |",
      "manipulators": [
        {
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "7",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "For some reason this was needed (remaps </> to key under esc)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "non_us_backslash",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "non_us_backslash",
              "modifiers": [
                "right_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "non_us_backslash"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "mandatory": [
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash",
            "modifiers": {
              "mandatory": [
                "right_shift"
              ]
            }
          },
          "to": [
            {
              "repeat": false,
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "right_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "non_us_backslash"
          },
          "to": [
            {
              "repeat": false,
              "key_code": "grave_accent_and_tilde"
            }
          ]
        }
      ]
    }
  ]
}
